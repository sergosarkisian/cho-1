## RULE DESCRIPTION
warn
    set acl_c_rule_fullname     = 2_check_mail__score__trusted_ip
    set acl_c_rule_main_lookup_var = $sender_host_address
    set acl_c_rule_description = Trusted IP, no spamscore at all for $acl_c_rule_main_lookup_var

.ifndef DISABLE__RULES__$acl_c_rule_fullname

## 1. RULE PRE
    warn
        # 1.1. WBL PARAMETERS
            set acl_c_rule_bwl_operator = wildlsearch
            
        # 1.2. INIT  - pre vars, bwl exec
            .include /etc/exim/engine_path/engine/rules/_base/score/_pre.rulesec   
            

## 2. RULE BODY
    warn
        # 2.1. APPLY AREA
            #hosts                   = ! +local_networks
            
        # 2.2. MAIN DSL LOGIC - conditions
            condition =  ${if exists {/etc/exim/client_path/lists/trusted/ip.from} {${lookup{$acl_c_rule_main_lookup_var} iplsearch {/etc/exim/client_path/lists/trusted/ip.from}{yes}{no}}}{no}}
            set acl_c_rule_is_trusted = yes

        # 2.3. SET RULE SUCCESS FLAG
            set acl_c_rule_proccessed = yes
            
            
## 3. RULE POST            
    warn
        # 3.1 ANALYSE - score calc/logitoring/vars/etc
            .include /etc/exim/engine_path/engine/rules/_base/score/_post.rulesec
            
        # 3.2 FACT
            set acl_c_rule_fact__2_check_mail__score__trusted_ip = 1
        
.endif
