index b9552fd..da33d72 100755
--- a/configure
+++ b/configure
@@ -1560,7 +1560,7 @@ fi
 
 if test "$pie" = ""; then
   case "$cpu-$targetos" in
-    i386-Linux|x86_64-Linux|x32-Linux|i386-OpenBSD|x86_64-OpenBSD)
