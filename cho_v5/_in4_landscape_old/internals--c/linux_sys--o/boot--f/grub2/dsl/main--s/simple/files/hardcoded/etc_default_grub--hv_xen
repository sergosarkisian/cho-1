# THIS FILE WILL BE PARTIALLY OVERWRITTEN by perl-Bootloader
# If you change this file, run 'grub2-mkconfig -o /boot/grub2/grub.cfg' afterwards to update

GRUB_DISTRIBUTOR=openSUSE
GRUB_DEFAULT="openSUSE, with Xen hypervisor"
GRUB_HIDDEN_TIMEOUT=0
GRUB_HIDDEN_TIMEOUT_QUIET=true
GRUB_TIMEOUT=4
GRUB_CMDLINE_LINUX_DEFAULT=" splash=silent quiet showopts"
# kernel command line options for failsafe mode
GRUB_CMDLINE_LINUX_RECOVERY="showopts apm=off noresume edd=off powersaved=off nohz=off highres=off processor.max_cstate=1 nomodeset x11failsafe"
GRUB_CMDLINE_LINUX="splash=silent quiet showopts ipv6.disable=1 elevator=deadline vga=0x314 rw"
GRUB_CMDLINE_LINUX_XEN_REPLACE="splash=silent quiet showopts ipv6.disable=1 elevator=deadline pci_pt_e820_access=on vga=0x314 intremap=off"
GRUB_CMDLINE_XEN_DEFAULT="vga=mode-0x314 dom0_max_vcpus=4 dom0_mem=4G,max:4G msi=on iommu=no-intremap console=ttyS0,115200 cpufreq=xen processor.max_cstate=1 intel_idle.max_cstate=0 allowsuperpage"

GRUB_TERMINAL=gfxterm
GRUB_GFXMODE=auto
# Uncomment if you don't want GRUB to pass "root=UUID=xxx" parameter to Linux
#GRUB_DISABLE_LINUX_UUID=true
GRUB_DISABLE_LINUX_RECOVERY=true
GRUB_DISABLE_OS_PROBER=true
GRUB_ENABLE_CRYPTODISK=n
SUSE_BTRFS_SNAPSHOT_BOOTING=true
GRUB_BACKGROUND=/boot/grub2/themes/openSUSE/background.png
GRUB_THEME=/boot/grub2/themes/openSUSE/theme.txt
GRUB_GFXPAYLOAD_LINUX=text

GRUB_PRELOAD_MODULES="drbd"
